apiVersion: v1
baseDomain: "{{ ocp4_dns_domain_base }}"
compute:
- hyperthreading: Enabled
  name: worker
  replicas: {{ worker_count | int }}
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: 3
metadata:
  name: "{{ ocp4_cluster_name }}"
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  networkType: OpenShiftSDN
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
pullSecret: '{{ ocp4_pull_secret }}'
sshKey: '{{ ocp4_public_key }}'
